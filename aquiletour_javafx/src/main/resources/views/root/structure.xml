<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.aquiletour.javafx.pages.root.RootViewFx" alignment="top_center" styleClass="fenetrePrincipale">
    <BorderPane VBox.vgrow="ALWAYS">
        <top>
            <MenuBar>
                <menus>
                <Menu styleClass="menu" text="%menu">
                    <items>
                    <MenuItem fx:id="dashboard" styleClass="menu_item" text="%mescours"/>
                    <MenuItem fx:id="settings" styleClass="menu_item" text="%parametres"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="quit" styleClass="menu_item" text="%quitter"/>
                    </items>
                </Menu>
            </menus>
            </MenuBar>
        </top>
        <center>
        <VBox alignment="top_center" fx:id="pageContainer">
		</VBox>
        </center>
    </BorderPane>
</VBox>
